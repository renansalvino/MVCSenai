@model Hamburgueria_WebMVC.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Pedidos - McBonald's";
    ViewData["H2"] = "Histórico de Pedidos";
}
<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
    <hgroup>
        <h1>McBonald's</h1>
    </hgroup>
</header>

<main>
    <h2>@ViewData["H2"]</h2>
    <h3>Seu histórico:</h3>
    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Hamburguer</th>
                <th>Shake</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var pedido in Model.Pedidos ) {
                <tr>
                    <td>@pedido.DataPedido</td>
                    <td>@pedido.Hamburguer.Nome</td>
                    <td>@pedido.Shake.Nome</td>
                    <td>@pedido.PrecoTotal</td>
                </tr>
            }
        </tbody>
    </table>

</main>